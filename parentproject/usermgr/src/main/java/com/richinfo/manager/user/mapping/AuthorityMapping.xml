<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.richinfo.manager.user.dao.AuthorityMapper">

	<resultMap type="com.richinfo.manager.common.util.BaseModel" id="baseModelMap">
		<result property="creater" column="creater" />  
        <result property="createTime" column="create_time" />  
        <result property="updater" column="updater" />
        <result property="updateTime" column="update_time" />  
        <result property="status" column="status" />  
	</resultMap>
	
	<resultMap type="com.richinfo.manager.user.model.Authority" id="authMap" extends="baseModelMap">
        <id property="id" column="id" />
        <result property="code" column="code"/>
        <result property="authName" column="auth_name" />
        <result property="parentAuthId" column="parant_auth_id" /> 
        <result property="menuUrl" column="menu_url" /> 
        <result property="authImg" column="auth_img" /> 
        
    </resultMap>
    <!-- 根据权限id获取权限实体 -->
    <select id="getAuthById" parameterType="java.lang.String" resultMap="authMap">
    	SELECT
    		* 
    	FROM 
    		T_YWPT_AUTHORITY
    	WHERE 
    		ID = #{id}
    </select>
    <!-- 根据父节点id获取权限列表 -->
    <select id="getAuthListByParentId" parameterType = "Map" resultMap="authMap">
    	SELECT 
    		*
    	FROM 
    		T_YWPT_AUTHORITY
    	WHERE
    	 	parant_auth_id = #{parantAuthId}
    </select>
    <!-- 插入权限 -->
    <insert id="insertAuthority" parameterType="com.richinfo.manager.user.model.Authority">
    	<selectKey keyProperty="id" resultType="String" order="BEFORE">
        	select sys_guid() from dual
    	</selectKey>
    	INSERT INTO T_YWPT_AUTHORITY(id,code,auth_name,parant_auth_id,menu_url,auth_img,status,creater,create_time)
    	VALUSES(#id,#code,#authName,#parentAuthId,#menuUrl,#authImg,#status,#creater,#create_time)
    </insert>
    
    <update id="deleteAuthorityById" parameterType="Map">
    	UPDATE 
    		T_YWPT_AUTHORITY 
    	SET 
    		status = ${status}
    	 WHERE
         	ID = #authId;
    </update>
    
    <!-- 更新权限内容 -->
    <update id="updateAuthority" parameterType="com.richinfo.manager.user.model.Authority">
    	UPDATE 
    		T_YWPT_AUTHORITY 
    	<set> 
    		  <if test="code != null and code != ''">
                and  code = ${code},
              </if>
                <if test="authName != null and authName != ''">
                and  auth_name = ${authName},
              </if>
                <if test="menuUrl != null and menuUrl != ''">
                and  menu_url = ${menuUrl},
              </if>
              <if test="status != null and status != ''">
                and  status = ${status},
              </if>
              <if test="updater != null and updater != ''">
                and  updater = ${updater},
              </if>
              <if test="updateTime != null and updateTime != ''">
                and  update_time = ${updateTime},
              </if>
         </set>
         WHERE
         	ID = #id;
    </update>
    
    <!-- 物理删除权限内容，暂时不用 -->
    <delete id="deleteAuthorityByIds" parameterType="String">
    	DELETE FROM
    		T_YWPT_AUTHORITY
    	WHERE 
    		ID = #authId;
    </delete>
    
</mapper>